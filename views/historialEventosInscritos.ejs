<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
    <title>Historial Eventos Inscritos</title>
    <link rel="icon" sizes="192x192" href="/img/icon.png">
</head>
<body>
    <div class="container border-bottom" id="general-horizontal">
        <div class="border-bottom mb-3">
            <%- include('../partials/headerUsuario.ejs') %>
        </div>
        <div class=""><!--container de los eventos-->
            <% for(let i = 0; i < eventos.length; i++) { %>
            <div class="row justify-content-between mb-3" id="display-flex-margin-bottom"><!--Fila 1 de 2 eventos-->
                <div class="col-6 row rounded-3 border border-black border-3">
                    <div class="col-7 text-center">
                        <div class="mt-2">
                            <h1><strong><u><%= eventos[i].titulo %></u></strong></h1>
                        </div>
                        <div class="">
                            <h3><b>Lugar: </b><%= eventos[i].ubicacion %></h3>
                        </div>
                        <div class="">
                            <h4><strong>Fecha: </strong><%= (eventos[i].fecha).toLocaleDateString('es-ES') %></h4>
                        </div>
                        <div class="">
                            <h4><strong>Hora: </strong><%= eventos[i].hora %></h4>
                        </div>
                    </div>
                    <img class="img-fluid col-5" src="/img/<%= eventos[i].tipo %>.png" style="width:40%;">
                </div>
                <% i++; %>
                <% if(i !== eventos.length){ %>
                <div class="col-6 row rounded-3 border border-black border-3">
                    <div class="col-7 text-center">
                        <div class="mt-2">
                            <h1><strong><u><%= eventos[i].titulo %></u></strong></h1>
                        </div>
                        <div class="">
                            <h3><b>Lugar: </b><%= eventos[i].ubicacion %></h3>
                        </div>
                        <div class="">
                            <h4><strong>Fecha: </strong><%= (eventos[i].fecha).toLocaleDateString('es-ES') %></h4>
                        </div>
                        <div class="">
                            <h4><strong>Hora: </strong><%= eventos[i].hora %></h4>
                        </div>
                    </div>
                    <img class="img-fluid col-5" src="/img/<%= eventos[i].tipo %>.png" style="width:40%;">
                </div>
                <% } %>
            </div>
            <% } %>
        </div>
    </div>
   
   <!--------------------------------MODALES--------------------------->

    <!-- Incluir modal de accesibilidad -->
    <%- include('../partials/accesibilidadModal.ejs') %> 

    <!--------------------------------LIBRERIAS--------------------------->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="/js/bootstrap.bundle.min.js"></script>
    <script src="/js/accesibilidadScript.js"></script>

    <!-- Scripts para manejar problemas de modal -->
    <script>
        $(document).ready(function () {
            // Forzar que el scroll del body no se bloquee al cerrar un modal
            $(document).on('hidden.bs.modal', function () {
                if ($('.modal.show').length > 0) {
                    $('body').addClass('modal-open');
                } else {
                    $('body').removeClass('modal-open');
                }
            });

            // Asegurarse de que el modal de accesibilidad no interfiera con otros modales
            $('#botonOpciones').on('show.bs.modal', function () {
                $('.modal.show').not(this).modal('hide'); // Cierra otros modales si est√°n abiertos
            });
        });
    </script>
</body>
</html>
