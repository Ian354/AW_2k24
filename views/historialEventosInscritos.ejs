<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
    <title>Historial Eventos Inscritos</title>
    <link rel="icon" sizes="192x192" href="/img/icon.png">
</head>
<body>
    <div class="container border-bottom" id="general-horizontal">
        <div class="border-bottom mb-3">
            <%- include('headerUsuario.ejs') %>
        </div>
        <div class=""><!--container de los eventos-->
            <% for(let i = 0; i < eventos.length; i++) { %>
            <div class="row justify-content-between mb-3" id="display-flex-margin-bottom"><!--Fila 1 de 2 eventos-->
                <div class="col-6 row rounded-3 border border-black border-3">
                    <div class="col-7 text-center">
                        <div class="mt-2">
                            <h1><strong><u><%= eventos[i].titulo %></u></strong></h3>
                        </div>
                        <div class="">
                            <h3><b>Lugar: </b><%= eventos[i].ubicacion %></h3>
                        </div>
                        <div class="">
                            <h4><strong>Fecha: </strong><%= (eventos[i].fecha).toLocaleDateString('es-ES') %></h4>
                        </div>
                        <div class="">
                            <h4><strong>Hora: </strong><%= eventos[i].hora %></h4>
                        </div>
                    </div>
                    <img class="img-fluid col-5" src="/img/<%= eventos[i].tipo %>.png" style="width:40%;">
                </div>
                <% i++; %>
                <% if(i !== eventos.length){ %>
                <div class="col-6 row rounded-3 border border-black border-3">
                    <div class="col-7 text-center">
                        <div class="mt-2">
                            <h1><strong><u><%= eventos[i].titulo %></u></strong></h3>
                        </div>
                        <div class="">
                            <h3><b>Lugar: </b><%= eventos[i].ubicacion %></h3>
                        </div>
                        <div class="">
                            <h4><strong>Fecha: </strong><%= (eventos[i].fecha).toLocaleDateString('es-ES') %></h4>
                        </div>
                        <div class="">
                            <h4><strong>Hora: </strong><%= eventos[i].hora %></h4>
                        </div>
                    </div>
                    <img class="img-fluid col-5" src="/img/<%= eventos[i].tipo %>.png" style="width:40%;">
                </div>
            <% } %>
            </div>
            <% } %>
    </div>
   
   <!--------------------------------MODALES--------------------------->
   
    <!--Modal de opciones-->
    <div class="modal fade" id="botonOpciones" tabindex="-1" role="dialog" aria-labelledby="tituloModal" aria-hidden="true">
        <div class="modal-dialog"> <!--Estructura de modal-->
            <div class="modal-content"><!--Contenido para el header-body-footer del modal-->
                <div class="modal-header justify-content-between"><!--Header Modal-->
                    <h5 id="tituloModal">Menú de Accesibilidad</h5>
                    <button class="close" data-bs-dismiss="modal" aria-label="Cerrar">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body"><!--Cuerpo Modal-->
                    <div class="alert alert-success"></div>
                </div>
                <div class="modal-footer"><!--Footer Modal-->
                    <div class="btn btn-dark" type="button" data-bs-dismiss="modal">
                        Cerrar
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--------------------------------LIBRERIAS--------------------------->

    <!--Librería con popper incluida, necesaria para los modales-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
