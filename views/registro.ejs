<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
    <title>Inicio Sesión</title>
    <link rel="icon" sizes="192x192" href="/img/icon.png">
</head>
<body>
    <div class="row justify-content-between">
        <div class="col-6 container border border-black rounded-5" id="general-centered">
            <form action="/registro" class="text-center" id="registroSesion" method="post">
                <% if (typeof error !== 'undefined') { %>
                    <div class="alert alert-danger" role="alert">
                        <%= error %>
                    </div>
                <% } %>
                <div id="margin-bottom">
                    <b>Nombre</b>
                    <input type="text" class="form-control" name="nombre" placeholder="Nombre" required>
                </div>
                <div id="margin-bottom">
                    <b>Teléfono</b>
                    <input type="tel" class="form-control" name="telefono" placeholder="Teléfono" required>
                </div>
                <div id="margin-bottom">
                    <b>Facultad</b>
                    <select type="text" class="form-select" name="facultad" required>
                        <option value="informatica">Informática</option>
                        <option value="biologia">Biología</option>
                        <option value="fisica">Física</option>
                        <option value="matematicas">Matemáticas</option>
                    </select>
                </div>
                <div id="margin-bottom">
                    <b>Correo</b>
                    <input type="email" class="form-control" name="correo" placeholder="Correo Electrónico" required>
                </div>
                <div id="margin-bottom">
                    <b>Contraseña</b>
                    <input type="password" class="form-control" name="contraseña" placeholder="Contraseña" required>
                </div>
                <div>
                    <button type="submit" class="btn btn-dark mt-3 mb-3 col-12">Registrarse</button>
                </div>
            </form>
            <div class="justify-content-between" id="display-flex-margin-bottom">
                <div class="col-3"></div>
                <div class="col-3">
                    <a href="/login" class="btn btn-dark">Iniciar Sesión</a>
                </div>
            </div>
        </div>
    </div>
</body>
</html>