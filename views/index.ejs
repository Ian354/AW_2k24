<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
    <title>Eventos UCM</title>
    <link rel="icon" sizes="192x192" href="/img/icon.png">
</head>
<body>
    <div class="container" id="general-horizontal">
        <%- include('../partials/headerIndex.ejs') %>

        <!-- Acordeon de opciones-->
        <div class="accordion mb-3">
            <% for(let i = 0; i < eventos.length; i++) { %>
            <% const evento = eventos[i] %>
            <div class="accordion-item">
                <h2 class="accordion-header"> 
                    <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapse<%= i %>" aria-expanded="false" aria-controls="panelsStayOpen-collapse<%= i %>">
                        <%= evento.titulo %>
                    </button>
                </h2>
                <div id="panelsStayOpen-collapse<%= i %>" class="accordion-collapse collapse">
                    <div class="accordion-body">
                        <div class="row">
                            <div class="col-6 text-center">
                                <div>
                                    <h4><%= evento.descripcion %></h4>
                                </div>
                                <div class="">
                                    <h3><b>Lugar: </b><%= evento.ubicacion %></h3>
                                </div>
                                <div class="">
                                    <h4><strong>Fecha: </strong><%= (evento.fecha).toLocaleDateString('es-ES') %> a las <%= evento.hora %></h4>
                                </div>
                                <form action="/apuntar/<%= evento.id %>" method="post">
                                    <button class="btn btn-dark" id="botonEvento<%= i %>">Registrarme</button>
                                </form>
                            </div>
                            <img class="img-fluid col-3" src="/img/<%= evento.tipo %>.png">
                        </div>
                    </div>
                </div>
            </div>
            <% } %>
        </div>        
    </div>

    <!--Modales-->
    <%- include('../partials/modalesIndex.ejs') %>
</body>
</html>