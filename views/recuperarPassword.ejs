<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
    <title>Recuperar Contraseña</title>
    <link rel="icon" sizes="192x192" href="/img/icon.png">
</head>
<body>
    <div class="container border border-black rounded-5" id="general-centered">
        <% if (typeof error !== 'undefined') { %>
            <div class="alert alert-danger mt-2" role="alert">
                <%= error %>
            </div>
        <% } %>
        <form action="/set-password" class="text-center" method="post">
            <div id="margin-bottom">
                <b>Inserte su correo</b>
                <input type="email" class="form-control" name="correo" placeholder="Correo Electrónico" required>
            </div>
            <div id="margin-bottom">
                <b>Inserte su nueva contraseña</b>
                <input type="password" class="form-control" name="password1" placeholder="Contraseña" required>
            </div>
            <div id="margin-bottom">
                <b>Insértela de nuevo</b>
                <input type="password" class="form-control" name="password2" placeholder="Contraseña" required>
            </div>
            <div>
                <button type="submit" class="btn btn-dark mt-3 mb-3 col-12">Cambiar contraseña</button>
            </div>
        </form>
    </div>
</body>
</html>