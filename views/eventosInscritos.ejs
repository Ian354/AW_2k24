<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="/scripts/jquery-3.7.1.min.js"></script>
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
    <title>Mis Eventos Inscritos</title>
    <link rel="icon" sizes="192x192" href="/img/icon.png">
</head>
<body>
    <div class="container border-bottom" id="general-horizontal">
        <div class="border-bottom mb-3">
            <%- include('../partials/headerUsuario.ejs') %>
        </div>
        <div class=""><!--container de los eventos-->
            <% for(let i = 0; i < eventos.length; i++) { %>
            <div class="row justify-content-between mb-3" id="display-flex-margin-bottom"><!--Fila 1 de 2 eventos-->
                <div class="col-lg-6 col-12 row rounded-3 border border-black border-3">
                    <div class="col-7 text-center">
                        <div class="mt-2">
                            <h1><strong><u><%= eventos[i].titulo %></u></strong></h3>
                        </div>
                        <div class="">
                            <h3><b>Lugar: </b><%= eventos[i].ubicacion %></h3>
                        </div>
                        <div class="">
                            <h4><strong>Fecha: </strong><%= (eventos[i].fecha).toLocaleDateString('es-ES') %></h4>
                        </div>
                        <div class="">
                            <h4><strong>Hora: </strong><%= eventos[i].hora %></h4>
                        </div>
                        <form action="/usuario/inscritos/desapuntar/<%= eventos[i].id %>" class="row justify-content-center mb-3" method="post">
                            <button class="btn btn-dark col-4 mz-2" id="desapuntarEvento<%= i %>"">Desapuntarse</button>
                        </form>
                    </div>
                    <img class="img-fluid col-5" src="/img/<%= eventos[i].tipo %>.png" style="width:40%;">
                </div>
                <% i++; %>
                <% if(i !== eventos.length){ %>
                <div class="col-lg-6 col-12 row rounded-3 border border-black border-3">
                    <div class="col-7 text-center">
                        <div class="mt-2">
                            <h1><strong><u><%= eventos[i].titulo %></u></strong></h3>
                        </div>
                        <div class="">
                            <h3><b>Lugar: </b><%= eventos[i].ubicacion %></h3>
                        </div>
                        <div class="">
                            <h4><strong>Fecha: </strong><%= (eventos[i].fecha).toLocaleDateString('es-ES') %></h4>
                        </div>
                        <div class="">
                            <h4><strong>Hora: </strong><%= eventos[i].hora %></h4>
                        </div>
                        <form action="/usuario/inscritos/desapuntar/<%= eventos[i].id %>" class="row justify-content-center mb-3" method="post">
                            <button class="btn btn-dark col-4 mz-2" id="desapuntarEvento<%= i %>"">Desapuntarse</button>
                        </form>
                    </div>
                    <img class="img-fluid col-5" src="/img/<%= eventos[i].tipo %>.png" style="width:40%;">
                </div>
            <% } %>
            </div>
            <% } %>
        </div>
    </div>
   
   <!--------------------------------MODALES--------------------------->

    <!--Modal de Desapuntarse-->
    <% if(info && info.length > 0) { %>
    <div class="modal fade show" id="modalDesapuntar" tabindex="-1" role="dialog" aria-labelledby="modalDesapuntar" aria-hidden="false">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header justify-content-between">
                    <h5 class="modal-title" id="tituloDesapuntar">Desapuntado</h5>
                </div>
                <div class="modal-body"><!--Cuerpo Modal-->
                    <%= info %>
                </div> 
                <div class="modal-footer"><!--Footer Modal-->
                    <div class="btn btn-dark" type="button" data-bs-dismiss="modal">
                        Cerrar
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        $(document).ready(function () {
            $("#modalDesapuntar").modal('show');
        });
    </script>
    <% } %>
    <!--Modal de Gestión de cola-->

    <!--------------------------------LIBRERIAS--------------------------->

    <!--Librería con popper incluida, necesaria para los modales-->
    <script src="/js/bootstrap.bundle.min.js"></script>
    <%- include('../partials/accesibilidadModal.ejs') %> 
    <script src="/js/accesibilidadScript.js"></script>
</body>
