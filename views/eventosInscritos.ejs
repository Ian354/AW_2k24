    </div>

    <!--Modal de Modificar-->
    <div class="modal fade" id="modalInfo" tabindex="-2" role="dialog" aria-labelledby="tituloModal" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header justify-content-between">
                    <h5 id="tituloEvento1">Evento 1</h5>
                    <button class="close" data-bs-dismiss="modal" aria-label="Cerrar">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body"><!--Cuerpo Modal-->
                        <form class="text-center" id="registroSesion">
                            <div id="margin-bottom">
                                <b>Titulo</b>
                                <input type="text" class="form-control" name="titulo" value="Evento 1" required>
                            </div>
                            <div id="margin-bottom">
                                <b>Descripcion</b>
                                <textarea class="form-control" name="descripcion" id="exampleFormControlTextarea1" rows="3">Descripcion del evento</textarea>
                            </div>
                            <div id="margin-bottom">
                                <b>Fecha</b>
                                <input type="date" class="form-control" name="facultad" placeholder="01/01/1970" required>
                            </div>
                            <div id="margin-bottom">
                                <b>Hora</b>
                                <input type="time" class="form-control" name="correo" placeholder="12:15" required>
                            </div>
                            <div id="margin-bottom">
                                <b>Ubicacion</b>
                                <input type="text" class="form-control" name="contraseña" placeholder="Contraseña" required>
                            </div>
                            <div id="margin-bottom">
                                <b>Capacidad Maxima</b>
                                <input type="text" class="form-control" name="contraseña" placeholder="Contraseña" required>
                            </div>
                            <div id="margin-bottom">
                                <b>Tipo de evento</b>
                                <select class="form-control" required>
                                    <option>Seminario</option>
                                    <option>Taller</option>
                                    <option>Conferencia</option>
                                </select>
                            </div>
                            <div>
                                <input type="submit" value="Editar Evento" class="btn btn-dark mt-3 mb-3 col-12">
                            </div>
                    </div>
                    <div class="modal-footer"><!--Footer Modal-->
                        <div class="btn btn-dark" type="button" data-bs-dismiss="modal">
                            Cerrar
                        </div>
                    </div>
                </div>
            </div>
        </div>
